<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:_40kArmyBuilder.Components"
             x:Class="_40kArmyBuilder.MobileMain">

    <ScrollView BackgroundColor="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource BackgroundDark}}">
        <VerticalStackLayout
            HorizontalOptions="Fill" >
            <Image
                Source="necron_header.jpg"
                HorizontalOptions="Fill"
                Aspect="AspectFit" />
            <components:ArmyListContainer
                x:Name="Incursion"
                ArmyType="Incursion"/>
            <components:ArmyListContainer
                x:Name="StrikeForce"
                ArmyType="StrikeForce"/>
            <components:ArmyListContainer
                x:Name="Onslaught"
                ArmyType="Onslaught"/>
            <components:ArmyListContainer
                x:Name="Custom"
                ArmyType="Custom"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
